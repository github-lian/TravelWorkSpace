<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="65dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ntc_pic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/head1"
        app:riv_border_color="#333333"
        app:riv_border_width="2dp"
        app:riv_mutate_background="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_margin="10dp"
        app:riv_oval="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ntc_title"
        android:layout_toRightOf="@+id/ntc_pic"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxLength="20"
        android:textColor="#000"
        android:text="title"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/ntc_desc"
        android:layout_toRightOf="@+id/ntc_pic"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/ntc_title"
        android:layout_marginLeft="5dp"
        android:textColor="#A8A8A8"
        android:maxLines="1"
        android:maxLength="10"
        android:text="desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/ntc_handle"
        android:layout_toRightOf="@+id/ntc_pic"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/ntc_desc"
        android:maxLines="1"
        android:maxLength="10"
        android:text="desc"
        android:textColor="#000"/>

    <Button
        android:id="@+id/notice_agree_btn"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginRight="5dp"
        android:focusable="false"
        android:layout_toLeftOf="@id/notice_reject_btn"
        android:layout_centerVertical="true"
        android:text="同意"
        android:textSize="11sp"
        android:background="@drawable/button_request"/>

    <Button
        android:id="@+id/notice_reject_btn"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:text="拒绝"
        android:textSize="11sp"
        android:background="@drawable/button_request"/>

    <Button
        android:id="@+id/notice_click"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:text="已同意"
        android:textSize="12sp"
        android:visibility="gone"
        android:background="@drawable/button_request"/>

</RelativeLayout>